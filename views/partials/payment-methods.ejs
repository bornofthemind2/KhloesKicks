<div class="payment-methods-container">
  <h3>üí≥ Choose Payment Method</h3>
  
  <!-- Stripe Credit Card (Primary) -->
  <div class="payment-option primary">
    <div class="payment-header">
      <div class="payment-icon">üí≥</div>
      <div class="payment-info">
        <h4>Credit/Debit Card</h4>
        <p>Visa, Mastercard, Amex, Discover</p>
      </div>
      <div class="payment-badge">Most Popular</div>
    </div>
    <form method="POST" action="/checkout/<%= auction?.id || product?.id %>">
      <input type="hidden" name="payment_method" value="stripe">
      <button type="submit" class="btn-payment stripe">
        üîí Pay with Card
      </button>
    </form>
  </div>

  <!-- PayPal -->
  <div class="payment-option">
    <div class="payment-header">
      <div class="payment-icon">üÖøÔ∏è</div>
      <div class="payment-info">
        <h4>PayPal</h4>
        <p>Pay with your PayPal account</p>
      </div>
    </div>
    <div id="paypal-button-container" class="paypal-container"></div>
  </div>

  <!-- Apple Pay (conditional) -->
  <div class="payment-option apple-pay" id="apple-pay-option" style="display: none;">
    <div class="payment-header">
      <div class="payment-icon">üçé</div>
      <div class="payment-info">
        <h4>Apple Pay</h4>
        <p>Touch ID or Face ID</p>
      </div>
    </div>
    <button id="apple-pay-button" class="btn-payment apple">
      Apple Pay
    </button>
  </div>

  <!-- Google Pay (conditional) -->
  <div class="payment-option google-pay" id="google-pay-option" style="display: none;">
    <div class="payment-header">
      <div class="payment-icon">üéØ</div>
      <div class="payment-info">
        <h4>Google Pay</h4>
        <p>One-tap checkout</p>
      </div>
    </div>
    <div id="google-pay-button-container"></div>
  </div>

  <!-- Razorpay (Multiple payment methods) -->
  <div class="payment-option razorpay-option">
    <div class="payment-header">
      <div class="payment-icon">üíé</div>
      <div class="payment-info">
        <h4>Razorpay</h4>
        <p>Cards, UPI, Wallets, Crypto & More</p>
      </div>
      <div class="payment-badge crypto">Crypto Supported</div>
    </div>
    <button id="razorpay-button" class="btn-payment razorpay">
      üí≥ Pay with Razorpay
    </button>
  </div>
</div>

<!-- Payment SDKs -->
<% if (typeof amount !== 'undefined' && amount > 0) { %>
<!-- PayPal SDK -->
<script src="https://www.paypal.com/sdk/js?client-id=<%= process.env.PAYPAL_CLIENT_ID || 'sb' %>&currency=USD"></script>
<!-- Razorpay SDK -->
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
  // PayPal integration
  if (typeof paypal !== 'undefined') {
    paypal.Buttons({
      style: {
        layout: 'horizontal',
        color: 'blue',
        shape: 'pill',
        label: 'pay',
        height: 45
      },
      createOrder: function(data, actions) {
        return actions.order.create({
          purchase_units: [{
            amount: {
              value: '<%= amount %>'
            },
            description: '<%= description || "Sneaker Purchase" %>'
          }]
        });
      },
      onApprove: function(data, actions) {
        return actions.order.capture().then(function(details) {
          // Handle successful payment
          window.location.href = '/order/<%= orderId || "new" %>/success';
        });
      },
      onError: function(err) {
        console.error('PayPal error:', err);
        alert('Payment failed. Please try again.');
      }
    }).render('#paypal-button-container');
  }

  // Apple Pay detection
  if (window.ApplePaySession && ApplePaySession.canMakePayments()) {
    document.getElementById('apple-pay-option').style.display = 'block';
    
    document.getElementById('apple-pay-button').addEventListener('click', function() {
      const request = {
        countryCode: 'US',
        currencyCode: 'USD',
        supportedNetworks: ['visa', 'masterCard', 'amex', 'discover'],
        merchantCapabilities: ['supports3DS'],
        total: {
          label: 'Khloe\'s Kicks',
          amount: '<%= amount %>'
        }
      };
      
      const session = new ApplePaySession(3, request);
      session.begin();
    });
  }

  // Google Pay detection (simplified)
  if (typeof google !== 'undefined' && google.payments) {
    document.getElementById('google-pay-option').style.display = 'block';
  }

  // Razorpay integration
  const razorpayButton = document.getElementById('razorpay-button');
  if (razorpayButton) {
    razorpayButton.addEventListener('click', async function() {
      try {
        // Create Razorpay order
        const orderResponse = await fetch('/payment/razorpay/create-order', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            amount: <%= amount %>,
            currency: 'USD',
            auctionId: <%= auctionId || 'null' %>,
            productId: <%= productId || 'null' %>
          })
        });

        if (!orderResponse.ok) {
          throw new Error('Failed to create order');
        }

        const orderData = await orderResponse.json();
        
        // Configure Razorpay options
        const razorpayOptions = {
          key: '<%= process.env.RAZORPAY_KEY_ID || "" %>',
          amount: orderData.razorpayOrder.amount,
          currency: orderData.razorpayOrder.currency,
          name: 'Khloe\'s Kicks',
          description: '<%= description || "Sneaker Purchase" %>',
          order_id: orderData.razorpayOrder.id,
          image: '/public/logo.png',
          handler: async function(response) {
            try {
              // Verify payment on server
              const verifyResponse = await fetch('/payment/razorpay/verify', {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                  razorpay_order_id: response.razorpay_order_id,
                  razorpay_payment_id: response.razorpay_payment_id,
                  razorpay_signature: response.razorpay_signature
                })
              });

              if (verifyResponse.ok) {
                const verifyData = await verifyResponse.json();
                window.location.href = `/order/${verifyData.orderId}/success`;
              } else {
                throw new Error('Payment verification failed');
              }
            } catch (error) {
              console.error('Payment verification error:', error);
              alert('Payment verification failed. Please contact support.');
            }
          },
          prefill: {
            name: '<%= user?.name || "" %>',
            email: '<%= user?.email || "" %>',
            contact: '<%= user?.phone || "" %>'
          },
          theme: {
            color: '#667eea'
          },
          modal: {
            ondismiss: function() {
              console.log('Razorpay checkout dismissed');
            }
          }
        };

        // Open Razorpay checkout
        const rzp = new Razorpay(razorpayOptions);
        rzp.open();

      } catch (error) {
        console.error('Razorpay payment error:', error);
        alert('Payment failed. Please try again.');
      }
    });
  }
});
</script>
<% } %>

