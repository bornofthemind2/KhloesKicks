<% if (featuredAuctions && featuredAuctions.length > 0) { %>
  <section class="hero">
    <h1 class="hero-title">Featured Kicks</h1>
    <p class="hero-subtitle">Don't miss out on these premium sneakers</p>
    <div class="hero-grid">
      <% featuredAuctions.forEach(a => { %>
        <div class="hero-card">
          <% if (a.image_url) { %>
            <img src="<%= a.image_url %>" class="hero-img" alt="<%= a.product_name %>" />
          <% } %>
          <div class="hero-content">
            <div class="hero-badge"><%= a.brand %></div>
            <h2><%= a.product_name %></h2>
            <% if (a.description) { %>
              <p class="hero-desc"><%= a.description %></p>
            <% } %>
            <div class="hero-stats">
              <div class="stat">
                <span class="stat-label">Current Bid</span>
                <span class="stat-value">$<%= a.current_bid || a.starting_bid %></span>
              </div>
              <div class="stat">
                <span class="stat-label">Market Value</span>
                <span class="stat-value">$<%= a.highest_market_price %></span>
              </div>
              <div class="stat">
                <span class="stat-label">Ends</span>
                <span class="stat-value"><%= dayjs(a.end_time).format('MMM DD') %></span>
              </div>
            </div>
            <a class="btn btn-hero" href="/auction/<%= a.id %>">
              <span class="btn-hero-icon">âš¡</span>
              <span class="btn-hero-text">Place Bid Now</span>
            </a>
          </div>
        </div>
      <% }) %>
    </div>
  </section>
<% } else if (featuredProducts && featuredProducts.length > 0) { %>
  <section class="hero">
    <h1 class="hero-title">Featured Kicks</h1>
    <p class="hero-subtitle">Hand-picked sneakers from our catalog</p>
    <div class="hero-grid">
      <% featuredProducts.forEach(p => { %>
        <div class="hero-card">
          <% if (p.image_url) { %>
            <img src="<%= p.image_url %>" class="hero-img" alt="<%= p.name %>" />
          <% } %>
          <div class="hero-content">
            <div class="hero-badge"><%= p.brand %></div>
            <h2><%= p.name %></h2>
            <% if (p.description) { %>
              <p class="hero-desc"><%= p.description %></p>
            <% } %>
            <div class="hero-stats">
              <div class="stat">
                <span class="stat-label">Market Value</span>
                <span class="stat-value">$<%= p.highest_market_price %></span>
              </div>
              <% if (p.buy_it_now_price && Number(p.buy_it_now_price) > 0) { %>
              <div class="stat">
                <span class="stat-label">Buy Now</span>
                <span class="stat-value">$<%= p.buy_it_now_price %></span>
              </div>
              <% } %>
            </div>
            <a class="btn btn-hero" href="/">
              <span class="btn-hero-icon">ðŸ‘Ÿ</span>
              <span class="btn-hero-text">Browse Auctions</span>
            </a>
          </div>
        </div>
      <% }) %>
    </div>
  </section>
<% } %>

<!-- Popular Brands Section -->
<% if (popularBrands && popularBrands.length > 0) { %>
<section class="brands-section">
  <div class="brands-header">
    <h2 class="brands-title">ðŸ”¥ Popular Brands</h2>
    <p class="brands-subtitle">Discover our most sought-after sneaker brands</p>
  </div>
  
  <div class="brands-grid">
    <% popularBrands.forEach(product => { %>
      <div class="brand-card">
        <div class="brand-image-container">
          <% if (product.image_url) { %>
            <img src="<%= product.image_url %>" class="brand-image" alt="<%= product.name %>" />
          <% } else { %>
            <div class="brand-placeholder">
              <span class="placeholder-text">ðŸ“·</span>
            </div>
          <% } %>
          <div class="brand-overlay">
            <div class="brand-logo">
              <%= product.brand %>
            </div>
          </div>
        </div>
        
        <div class="brand-content">
          <div class="brand-header">
            <span class="brand-name"><%= product.brand %></span>
            <span class="product-count"><%= product.product_count %> items</span>
          </div>
          
          <h3 class="product-showcase"><%= product.name %></h3>
          
          <div class="brand-stats">
            <div class="brand-stat">
              <span class="stat-label">Market Value</span>
              <span class="stat-value">$<%= product.highest_market_price %></span>
            </div>
            <% if (product.size) { %>
            <div class="brand-stat">
              <span class="stat-label">Size</span>
              <span class="stat-value"><%= product.size %></span>
            </div>
            <% } %>
          </div>
          
          <div class="brand-actions">
            <a href="/?brand=<%= encodeURIComponent(product.brand) %>" class="btn-brand">
              <span class="btn-brand-icon">ðŸ‘Ÿ</span>
              <span class="btn-brand-text">Shop <%= product.brand %></span>
            </a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</section>
<% } %>

<section class="auctions-section">
  <% if (brandFilter) { %>
    <div class="filter-header">
      <h1>ðŸ”¥ <%= brandFilter %> Auctions</h1>
      <div class="filter-actions">
        <a href="/" class="btn-clear-filter">
          âœ• Show All Brands
        </a>
      </div>
    </div>
  <% } else { %>
    <h1>All Open Auctions</h1>
  <% } %>
  <div class="grid">
    <% auctions.forEach(a => { %>
      <div class="card">
        <% if (a.image_url) { %>
          <img src="<%= a.image_url %>" class="thumb" alt="<%= a.product_name %>" />
        <% } %>
        <h3><%= a.brand %> - <%= a.product_name %></h3>
        <p>Ends: <%= dayjs(a.end_time).format('YYYY-MM-DD HH:mm') %></p>
        <p>Current bid: $<%= a.current_bid || a.starting_bid %></p>
        <a class="btn" href="/auction/<%= a.id %>">View</a>
      </div>
    <% }) %>
  </div>
</section>

