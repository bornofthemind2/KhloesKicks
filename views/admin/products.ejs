<div class="admin-header">
  <h1>Products Management</h1>
  <div class="admin-actions">
    <a href="/admin/import" class="btn btn-primary">
      üì• Import CSV
    </a>
    <a href="/admin/export/products" class="btn btn-export" download>
      üì§ Export Products CSV
    </a>
    <a href="/admin/export/auctions" class="btn btn-export-secondary" download>
      üîÑ Export Auctions CSV
    </a>
  </div>
</div>

<div class="stats-row">
  <div class="stat-card">
    <div class="stat-number"><%= products.length %></div>
    <div class="stat-label">Total Products</div>
  </div>
  <div class="stat-card">
    <div class="stat-number"><%= products.filter(p => p.is_featured).length %></div>
    <div class="stat-label">Featured Products</div>
  </div>
  <div class="stat-card">
    <div class="stat-number"><%= [...new Set(products.map(p => p.brand))].length %></div>
    <div class="stat-label">Unique Brands</div>
  </div>
</div>

<table class="table">
  <thead><tr><th>ID</th><th>Brand</th><th>Name</th><th>SKU</th><th>Size</th><th>Featured</th><th>Auction</th><th>Actions</th></tr></thead>
  <tbody>
    <% products.forEach(p => { %>
      <% const activeAuction = p.auctions && p.auctions.find(a => a.status === 'open') %>
      <tr>
        <td><%= p.id %></td>
        <td><%= p.brand %></td>
        <td><%= p.name %></td>
        <td><%= p.sku %></td>
        <td><%= p.size %></td>
        <td>
          <% if (p.is_featured) { %>
            <span class="badge badge-success">‚úì Featured</span>
          <% } else { %>
            <span class="badge">Not Featured</span>
          <% } %>
        </td>
        <td class="auction-controls">
          <% if (activeAuction) { %>
            <div class="auction-status">
              <span class="badge badge-auction-active">üî• Live Auction</span>
              <button 
                onclick="endAuction(<%= activeAuction.id %>, <%= p.id %>)" 
                class="btn btn-small btn-danger auction-btn"
                title="End Auction">
                üõë Stop
              </button>
            </div>
          <% } else { %>
            <div class="auction-status">
              <span class="badge badge-auction-inactive">No Auction</span>
              <button 
                onclick="showStartAuctionModal(<%= p.id %>)" 
                class="btn btn-small btn-auction auction-btn"
                title="Start Auction">
                ‚ñ∂Ô∏è Start
              </button>
            </div>
          <% } %>
        </td>
        <td>
          <a href="/products/<%= p.id %>/edit" class="btn btn-small">Edit</a>
          <form method="post" action="/products/<%= p.id %>/toggle-featured" style="display: inline-block; margin-left: 5px;">
            <button type="submit" class="btn btn-small <%= p.is_featured ? 'btn-warning' : 'btn-success' %>">
              <%= p.is_featured ? 'Unfeature' : 'Feature' %>
            </button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

