<!-- Start Auction Modal -->
<div id="startAuctionModal" class="modal">
  <div class="modal-content">
    <div class="modal-header">
      <h2>üî• Start New Auction</h2>
      <span class="close" onclick="closeStartAuctionModal()">&times;</span>
    </div>
    <div class="modal-body">
      <form id="startAuctionForm">
        <input type="hidden" id="auctionProductId" name="product_id">
        <div class="form-group">
          <label for="startingBid">Starting Bid ($)</label>
          <input type="number" id="startingBid" name="starting_bid" min="1" step="1" required>
        </div>
        <div class="form-group">
          <label for="duration">Duration</label>
          <select id="duration" name="duration" required>
            <option value="1">1 Day</option>
            <option value="3" selected>3 Days</option>
            <option value="7">7 Days</option>
            <option value="14">14 Days</option>
          </select>
        </div>
      </form>
    </div>
    <div class="modal-actions">
      <button type="button" class="btn-modal btn-modal-secondary" onclick="closeStartAuctionModal()">Cancel</button>
      <button type="button" class="btn-modal btn-modal-primary" onclick="startAuction()">üöÄ Start Auction</button>
    </div>
  </div>
</div>

<script>
function showStartAuctionModal(productId) {
  document.getElementById('auctionProductId').value = productId;
  document.getElementById('startAuctionModal').style.display = 'block';
  document.body.style.overflow = 'hidden';
}

function closeStartAuctionModal() {
  document.getElementById('startAuctionModal').style.display = 'none';
  document.body.style.overflow = 'auto';
  document.getElementById('startAuctionForm').reset();
}

function startAuction() {
  const form = document.getElementById('startAuctionForm');
  const formData = new FormData(form);
  const data = Object.fromEntries(formData);
  
  if (!data.starting_bid || !data.duration) {
    alert('Please fill in all required fields');
    return;
  }
  
  fetch('/api/auctions', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
    },
    body: JSON.stringify(data)
  })
  .then(response => response.json())
  .then(result => {
    if (result.success) {
      alert('‚úÖ Auction started successfully!');
      closeStartAuctionModal();
      location.reload();
    } else {
      alert('‚ùå Error: ' + result.error);
    }
  })
  .catch(error => {
    console.error('Error:', error);
    alert('‚ùå Failed to start auction');
  });
}

function endAuction(auctionId, productId) {
  if (!confirm('Are you sure you want to end this auction?')) {
    return;
  }
  
  fetch(`/api/auctions/${auctionId}/end`, {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
    }
  })
  .then(response => response.json())
  .then(result => {
    if (result.success) {
      alert('‚úÖ Auction ended successfully!');
      location.reload();
    } else {
      alert('‚ùå Error: ' + result.error);
    }
  })
  .catch(error => {
    console.error('Error:', error);
    alert('‚ùå Failed to end auction');
  });
}

// Close modal when clicking outside of it
window.onclick = function(event) {
  const modal = document.getElementById('startAuctionModal');
  if (event.target === modal) {
    closeStartAuctionModal();
  }
}
</script>
