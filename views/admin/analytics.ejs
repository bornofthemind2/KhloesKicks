<div class="admin-header">
  <h1>Payment Gateway Analytics</h1>
  <div class="admin-actions">
    <a href="/admin/export/orders" class="btn btn-export" download>
      üì§ Export Orders CSV
    </a>
    <span class="date-range">Last 30 Days</span>
  </div>
</div>

<div class="stats-row">
  <% 
  const totalVolume = analytics.reduce((sum, a) => sum + (a.total_volume || 0), 0);
  const totalTransactions = analytics.reduce((sum, a) => sum + (a.total_transactions || 0), 0);
  const avgSuccessRate = analytics.length > 0 ? analytics.reduce((sum, a) => sum + (a.avg_success_rate || 0), 0) / analytics.length : 0;
  const totalFees = analytics.reduce((sum, a) => sum + ((a.total_volume * a.avg_fee_rate / 100) || 0), 0);
  %>
  <div class="stat-card">
    <div class="stat-number">$<%= Math.round(totalVolume).toLocaleString() %></div>
    <div class="stat-label">Total Volume</div>
  </div>
  <div class="stat-card">
    <div class="stat-number"><%= totalTransactions %></div>
    <div class="stat-label">Total Transactions</div>
  </div>
  <div class="stat-card">
    <div class="stat-number"><%= Math.round(avgSuccessRate) %>%</div>
    <div class="stat-label">Avg Success Rate</div>
  </div>
  <div class="stat-card">
    <div class="stat-number">$<%= Math.round(totalFees).toLocaleString() %></div>
    <div class="stat-label">Total Fees Paid</div>
  </div>
</div>

<div class="analytics-grid">
  <!-- Gateway Comparison -->
  <div class="analytics-card">
    <h2>Gateway Performance Comparison</h2>
    <div class="gateway-comparison">
      <% analytics.forEach(gateway => { %>
        <div class="gateway-row">
          <div class="gateway-info">
            <div class="gateway-name">
              <span class="gateway-icon <%= gateway.gateway_name %>">
                <% if (gateway.gateway_name === 'stripe') { %>üí≥<% } %>
                <% if (gateway.gateway_name === 'razorpay') { %>üíé<% } %>
                <% if (gateway.gateway_name === 'paypal') { %>üÖøÔ∏è<% } %>
                <% if (gateway.gateway_name === 'square') { %>‚¨ú<% } %>
              </span>
              <%= gateway.gateway_name.charAt(0).toUpperCase() + gateway.gateway_name.slice(1) %>
            </div>
            <div class="gateway-stats">
              <span class="volume">$<%= Math.round(gateway.total_volume || 0).toLocaleString() %></span>
              <span class="transactions"><%= gateway.total_transactions || 0 %> txns</span>
              <span class="success-rate <%= gateway.avg_success_rate >= 95 ? 'high' : gateway.avg_success_rate >= 85 ? 'medium' : 'low' %>">
                <%= Math.round(gateway.avg_success_rate || 0) %>% success
              </span>
              <span class="fee-rate">
                <%= (gateway.avg_fee_rate || 0).toFixed(2) %>% avg fee
              </span>
            </div>
          </div>
          <div class="gateway-progress">
            <div class="progress-bar">
              <div class="progress-fill" style="width: <%= Math.min(100, (gateway.total_volume / Math.max(totalVolume, 1)) * 100) %>%"></div>
            </div>
          </div>
        </div>
      <% }); %>
      
      <% if (analytics.length === 0) { %>
        <div class="no-data">
          <p>No payment data available yet.</p>
          <p>Complete some transactions to see analytics here.</p>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Recent Transactions -->
  <div class="analytics-card">
    <h2>Recent Transactions</h2>
    <div class="transactions-list">
      <% if (recentOrders.length > 0) { %>
        <% recentOrders.slice(0, 10).forEach(order => { %>
          <div class="transaction-row">
            <div class="transaction-info">
              <div class="transaction-gateway">
                <span class="gateway-badge <%= order.payment_gateway %>">
                  <%= order.payment_gateway || 'stripe' %>
                </span>
              </div>
              <div class="transaction-details">
                <div class="transaction-product">
                  <%= order.brand %> <%= order.product_name %>
                </div>
                <div class="transaction-user">
                  <%= order.user_email %>
                </div>
              </div>
              <div class="transaction-amount">
                <div class="amount">$<%= order.amount %></div>
                <% if (order.gateway_fees > 0) { %>
                  <div class="fees">-$<%= order.gateway_fees.toFixed(2) %> fees</div>
                <% } %>
              </div>
              <div class="transaction-status">
                <span class="status-badge <%= order.status %>"><%= order.status %></span>
                <div class="transaction-date">
                  <%= dayjs(order.created_at).format('MMM DD, HH:mm') %>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <div class="no-data">
          <p>No recent transactions.</p>
        </div>
      <% } %>
    </div>
  </div>
</div>

<!-- Gateway Recommendations -->
<div class="analytics-card recommendations">
  <h2>üí° Gateway Optimization Recommendations</h2>
  <div class="recommendations-list">
    <% 
    const stripeGateway = analytics.find(g => g.gateway_name === 'stripe');
    const razorpayGateway = analytics.find(g => g.gateway_name === 'razorpay');
    %>
    
    <div class="recommendation">
      <div class="rec-icon">üí∞</div>
      <div class="rec-content">
        <h3>Cost Optimization</h3>
        <% if (!razorpayGateway && stripeGateway) { %>
          <p>Consider using <strong>Razorpay</strong> for international customers - it offers 2% fees (vs Stripe's 2.9%) and cryptocurrency support.</p>
        <% } else if (razorpayGateway && razorpayGateway.avg_fee_rate < 2.5) { %>
          <p>Great job! Razorpay is saving you ~30% on payment processing fees compared to traditional gateways.</p>
        <% } else { %>
          <p>Your payment processing costs are optimized. Consider volume discounts for higher transaction amounts.</p>
        <% } %>
      </div>
    </div>

    <div class="recommendation">
      <div class="rec-icon">üåç</div>
      <div class="rec-content">
        <h3>Global Expansion</h3>
        <p>Add more payment methods like <strong>Apple Pay</strong>, <strong>Google Pay</strong>, and regional wallets to increase conversion rates by 15-25%.</p>
      </div>
    </div>

    <div class="recommendation">
      <div class="rec-icon">üìä</div>
      <div class="rec-content">
        <h3>Performance Monitoring</h3>
        <p>Success rates above 95% are excellent. Monitor decline rates and consider smart routing for failed transactions.</p>
      </div>
    </div>

    <div class="recommendation">
      <div class="rec-icon">üîÆ</div>
      <div class="rec-content">
        <h3>Future-Proof Payments</h3>
        <p>Cryptocurrency adoption is growing among sneaker enthusiasts. Your Razorpay integration supports crypto payments!</p>
      </div>
    </div>
  </div>
</div>

