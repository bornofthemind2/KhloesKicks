<div class="admin-header">
  <h1>Sales Dashboard</h1>
  <div class="admin-actions">
    <a href="/admin/export/orders" class="btn btn-export" download>
      ðŸ“¤ Export Orders CSV
    </a>
    <a href="/admin/export/auctions" class="btn btn-export-secondary" download>
      ðŸ”„ Export Auctions CSV
    </a>
  </div>
</div>

<div class="stats-row">
  <div class="stat-card">
    <div class="stat-number"><%= orders.length %></div>
    <div class="stat-label">Total Orders</div>
  </div>
  <div class="stat-card">
    <div class="stat-number"><%= orders.filter(o => o.status === 'paid').length %></div>
    <div class="stat-label">Paid Orders</div>
  </div>
  <div class="stat-card">
    <div class="stat-number"><%= openBids.length %></div>
    <div class="stat-label">Active Auctions</div>
  </div>
  <div class="stat-card">
    <div class="stat-number">$<%= orders.filter(o => o.status === 'paid').reduce((sum, o) => sum + o.amount, 0) %></div>
    <div class="stat-label">Revenue</div>
  </div>
</div>

<h2>Open Auctions</h2>
<table class="table">
  <thead><tr><th>Auction</th><th>Leader</th><th>Current Bid</th><th>Ends</th></tr></thead>
  <tbody>
    <% openBids.forEach(b => { %>
      <tr>
        <td>#<%= b.auction_id %> - <%= b.brand %> <%= b.product_name %></td>
        <td><%= b.leader_email || '-' %></td>
        <td>$<%= b.current_bid || 0 %></td>
        <td><%= dayjs(b.end_time).format('YYYY-MM-DD HH:mm') %></td>
      </tr>
    <% }) %>
  </tbody>
</table>

<h2>Orders</h2>
<table class="table">
  <thead><tr><th>Order</th><th>Buyer</th><th>Product</th><th>Amount</th><th>Status</th><th>Actions</th></tr></thead>
  <tbody>
    <% orders.forEach(o => { %>
      <tr>
        <td>#<%= o.id %></td>
        <td><%= o.buyer_email %></td>
        <td><%= o.brand %> <%= o.product_name %></td>
        <td>$<%= o.amount %></td>
        <td><%= o.status %></td>
        <td>
          <% if (o.status === 'paid') { %>
            <form method="post" action="/admin/orders/<%= o.id %>/create-label">
              <button class="btn">Create Shipping Label</button>
            </form>
          <% } %>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

