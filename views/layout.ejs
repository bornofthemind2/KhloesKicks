<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= typeof title !== 'undefined' ? title : 'Khloes Kicks' %></title>
  <link rel="icon" type="image/png" href="/public/logo.png" />
  <link rel="stylesheet" href="/public/styles.css" />
</head>
<body>
  <header class="topbar fixed-top">
    <a href="/" class="brand">
      <img src="/public/logo.png" alt="Khloes Kicks" class="logo" />
      <span>Khloes Kicks</span>
    </a>
    <nav>
      <% if (typeof user !== 'undefined' && user) { %>
        <span>Hi, <%= user.name || user.email %></span>
        <% if (user.is_admin) { %>
          <a href="/admin/sales">Sales</a>
          <a href="/admin/shipping">Shipping</a>
          <a href="/admin/import">Import</a>
          <a href="/products">Products</a>
          <a href="/admin/connect">Payments</a>
        <% } else { %>
          <a href="/my-orders">My Orders</a>
          <a href="/track">Track Package</a>
        <% } %>
        <a href="/logout">Logout</a>
      <% } else { %>
        <a href="/register">Register</a>
        <a href="/login">Login</a>
      <% } %>
    </nav>
  </header>
  <main class="container">
    <%- body %>
  </main>
  <footer class="footer">
    <small>&copy; <%= new Date().getFullYear() %> Khloes Kicks</small>
  </footer>
</body>
</html>
